# =============================================================================
# HPC OOD Stack - Required Variables Configuration
# =============================================================================
# This file contains all variables that do not have default values and must be
# provided for the Terraform configuration to work.
#
# Copy this file to terraform.tfvars and fill in your actual values.
# =============================================================================

# -----------------------------------------------------------------------------
# OCI Authentication & Basic Configuration
# -----------------------------------------------------------------------------
# Your OCI region (e.g., "us-ashburn-1", "us-phoenix-1", "eu-frankfurt-1")
region = ""

# Your OCI tenancy OCID (found in OCI Console > Administration > Tenancy Details)
tenancy_ocid = ""

# Target compartment OCID where resources will be created
targetCompartment = ""

# -----------------------------------------------------------------------------
# Availability Domain Configuration
# -----------------------------------------------------------------------------
# Primary availability domain for your resources
ad = ""

# Controller availability domain (can be same as 'ad' or different)
controller_ad = ""

# -----------------------------------------------------------------------------
# SSH Key Configuration
# -----------------------------------------------------------------------------
# Path to your public SSH key file (e.g., "~/.ssh/id_rsa.pub")
# This key will be used for accessing all instances
ssh_key = ""

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Controller boot volume size in GB (minimum recommended: 50)
controller_boot_volume_size = 50

# Whether to enable backup for controller boot volume (true/false)
controller_boot_volume_backup = true

# -----------------------------------------------------------------------------
# Open OnDemand (OOD) Configuration
# -----------------------------------------------------------------------------
# Email address for the OOD user account
ood_user_email = ""

# Password for the OOD user account
ood_user_password = ""

# =============================================================================
# Optional Variables (with defaults) - Uncomment and modify as needed
# =============================================================================

